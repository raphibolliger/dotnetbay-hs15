<Window x:Class="DotNetBay.WPF.View.SellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DotNetBay.WPF.View"
        mc:Ignorable="d"
        Title="SellView" Height="291.5" Width="311" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="HeadingLabel" Content="Add New Auction" Margin="10,5,10,0" VerticalAlignment="Top" Padding="0" FontSize="16"/>
        <Label x:Name="TitleLabel" Content="Title" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Padding="0" Width="100" VerticalContentAlignment="Center" Height="18"/>
        <TextBox x:Name="TitleTextBox" Margin="115,36,10,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="18" />
        <Label x:Name="DescriptionLabel" Content="Description" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Padding="0" Width="100" VerticalContentAlignment="Center" Height="18"/>
        <Label x:Name="StartPriceLabel" Content="Start Price" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top" Padding="0" Width="100" VerticalContentAlignment="Center" Height="18"/>
        <Label x:Name="StartDateLabel" Content="Start" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Padding="0" Width="100" VerticalContentAlignment="Center" Height="18"/>
        <Label x:Name="EndDateLabel" Content="End" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Padding="0" Width="100" VerticalContentAlignment="Center" Height="18"/>
        <Label x:Name="ImageLabel" Content="Image" HorizontalAlignment="Left" Margin="10,198,0,0" VerticalAlignment="Top" Padding="0" Width="100" VerticalContentAlignment="Center" Height="18"/>
        <TextBox x:Name="DescriptionTextBox" Margin="115,59,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="65"/>
        <TextBox x:Name="StartPriceTextBox" Margin="115,129,10,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="18"/>
        <DatePicker x:Name="StartDatePicker" Margin="115,152,10,0" VerticalAlignment="Top" Height="18" FirstDayOfWeek="Monday" SelectedDateFormat="Short" Text="f"/>
        <DatePicker x:Name="EndDatePicker" Margin="115,175,10,0" VerticalAlignment="Top" Height="18"/>
        <TextBox x:Name="ImageTextBox" Margin="115,198,35,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="18" IsEnabled="False"/>
        <Button x:Name="OpenImageButton" Content="..." Margin="0,198,10,0" VerticalAlignment="Top" Height="18" Click="button_Click" HorizontalAlignment="Right" Width="20"/>
        <Button x:Name="CancelButton" Content="Cancel" Margin="218,0,12,12" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="AddAuctionButton" Content="Add Auction" Margin="115,0,92,12" Height="20" VerticalAlignment="Bottom" Click="AddAuctionButton_Click"/>

    </Grid>
</Window>
